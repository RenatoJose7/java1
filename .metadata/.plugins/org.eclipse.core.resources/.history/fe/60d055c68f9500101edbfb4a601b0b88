package primeiroProjeto;

import java.util.Scanner;

public class lista15 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		// 1 - Criando um vetor 

		
		System.out.println("Informe o nome de 5 frutas");
		String[] nomes = new String[5];
		for(int i = 0; i < 5; i++) {
			System.out.println("nome["+i+"]: ");
			nomes[i] = sc.next();
		}
		System.out.println("Frutas escolhidas: ");
		for(int i = 0; i < 5; i++) {
			System.out.println(nomes[i]);
		}
		
		
		// 2 - Vetor de nÃºmeros inteiros
		
		System.out.println("-------------------------------------------------");
		System.out.println("Informe 10 valores inteiros");
		int[] num = new int [10];
		for(int i = 0; i<=9; i++) {
			System.out.println("Valores["+i+"]: ");
			num[i] = sc.nextInt();
		}
		System.out.println("Numeros escolhidos: ");
		for(int s = 0; s<=10; s++) {
			System.out.println(num[s]);
		}
		
		
		// 3 - Mostrando os valores na ordem inversa
		
		System.out.println("-------------------------------------------------");
		System.out.println("Informe 7 valores");
		int[] inv = new int [10];
		for(int i = 0; i<=9; i++) {
			System.out.println("Valores["+i+"]: ");
			inv[i] = sc.nextInt();
		}
		System.out.println("Numeros escolhidos");
		for(int i = 9; i>=0; i--) {
			System.out.println(inv[i]);
		}
		
		
		
	}

}
